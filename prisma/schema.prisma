generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Destination {
  id                 String              @id @default(auto()) @map("_id") @db.ObjectId
  title              String
  location           String
  imgUrl             String
  price              Float
  averageRate        Float
  DestinationDetails DestinationDetails?
}

model DestinationDetails {
  id            String      @id @default(auto()) @map("_id") @db.ObjectId
  title         String
  desc          String
  trip          Json?
  about         Json?
  basicInfo     Json[]
  gallery       String[]
  destination   Destination @relation(fields: [destinationId], references: [id])
  destinationId String      @unique @db.ObjectId
}

model Testimonal {
  id                 String  @id @default(auto()) @map("_id") @db.ObjectId
  travelerText       String
  travelerName       String
  travelerOccupation String?
}

model Team {
  id         String @id @default(auto()) @map("_id") @db.ObjectId
  imgUrl     String @unique
  fullname   String
  occupation String @unique
}

model Package {
  id               String          @id @default(auto()) @map("_id") @db.ObjectId
  title            String
  duration         String
  averageRate      Float
  imgUrl           String
  PackageDetails   PackageDetails? @relation(fields: [packageDetailsId], references: [id])
  DetailsGallery   DetailsGallery? @relation(fields: [detailsGalleryId], references: [id])
  detailsGalleryId String?         @db.ObjectId
  packageDetailsId String?         @db.ObjectId
}

model PackageDetails {
  id             String           @id @default(auto()) @map("_id") @db.ObjectId
  desc           String
  exploreDesc    String
  packageDetails Json
  basicInfo      Json
  services       Json[]
  tourPlan       Json[]
  gallery        DetailsGallery[]
  packageId      String           @unique @db.ObjectId
  Package        Package[]
}

model DetailsGallery {
  id               String          @id @default(auto()) @map("_id") @db.ObjectId
  imgUrls          String[]
  packageDetailsId String?         @db.ObjectId
  PackageDetails   PackageDetails? @relation(fields: [packageDetailsId], references: [id])
  Package          Package[]
}
